FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies for react-router CLI)
RUN npm install

# Install react-router CLI globally as a fallback
RUN npm install -g @react-router/dev

# Copy application files
COPY . .

# Expose port
EXPOSE 5173

# Start the application using npx to ensure the CLI is found
CMD ["npx", "react-router", "dev", "--host", "0.0.0.0", "--allowed-hosts", "all"]