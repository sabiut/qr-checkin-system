FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Copy all files
COPY . .

# Expose port
EXPOSE 3000

# Run exactly like dev setup - install ALL dependencies including devDependencies
CMD ["sh", "-c", "NODE_ENV=development npm ci && npx vite --host 0.0.0.0 --port 3000"]