FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (like dev does)
RUN npm ci

# Copy all files
COPY . .

# Expose port
EXPOSE 3000

# Just run vite dev server like in development (avoids all build issues)
CMD ["sh", "-c", "npm ci && npx vite --host 0.0.0.0 --port 3000"]