FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (like dev does)
RUN npm ci

# Copy all files
COPY . .

# Expose port
EXPOSE 3000

# Use vite build instead of react-router build to avoid Babel SSR issues
CMD ["sh", "-c", "npx vite build && npx vite preview --host 0.0.0.0 --port 3000"]