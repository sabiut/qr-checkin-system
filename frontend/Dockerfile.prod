FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies including dev dependencies (needed for @react-router/dev)
RUN npm ci

# Copy all files
COPY . .

# Expose port
EXPOSE 3000

# Use production vite config without React Router SSR
CMD ["sh", "-c", "npx vite --config vite.config.prod.ts --host 0.0.0.0 --port 3000"]